  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Chainlit",
      "type": "debugpy",
      "request": "launch",
      "module": "chainlit",
      "args": ["run", "src/chat/chat.py"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Attach to Chainlit",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "justMyCode": false
    }
  ]
}
